<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <style>
      /* Custom CSS */
      .navbar {
        background-color: #343a40; /* Dark gray background */
        border-bottom: 1px solid #dee2e6; /* Light gray border */
      }

      .navbar-nav .nav-link {
        color: #ffffff; /* White text color */
      }

      .navbar-nav .nav-link:hover {
        color: #d4d4d4; /* Light gray text color on hover */
      }

      .navbar-brand {
        color: #ffffff; /* White text color for brand */
      }

      .navbar-brand:hover {
        color: #d4d4d4; /* Light gray text color on hover */
      }

      .card-img-top {
        height: 200px;
        object-fit: cover;
      }

      .card-title {
        font-size: 1.2rem;
      }

      .card-text {
        font-size: 1rem;
      }

      .btn {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar', {title: "UserProfile", user}); %>

    <div class="container mt-5">
      <h2>User Profile</h2>

      <% if (!data.UserProfile) { %>
      <form action="/profile/<%= data.id %>/add" method="POST">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input
            type="text"
            class="form-control"
            id="firstName"
            name="firstName"
            required
          />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input
            type="text"
            class="form-control"
            id="lastName"
            name="lastName"
            required
          />
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input
            type="text"
            class="form-control"
            id="address"
            name="address"
            required
          />
        </div>
        <div class="form-group">
          <label for="phone">Phone</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Update Profile</button>
      </form>
      <% } %>
      <hr />
      <p><%= data.email %></p>
      <p><%= data.UserProfile.firstName %></p>
      <p><%= data.UserProfile.lastName %></p>
      <p><%= data.UserProfile.address %></p>
      <p><%= data.UserProfile.phone %></p>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
