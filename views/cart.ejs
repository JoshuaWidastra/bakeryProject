<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Orders History</title>

    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <style>
      /* Custom CSS */
      .navbar {
        background-color: #343a40; /* Dark gray background */
        border-bottom: 1px solid #dee2e6; /* Light gray border */
      }

      .navbar-nav .nav-link {
        color: #ffffff !important; /* White text color */
      }

      .navbar-nav .nav-link:hover {
        color: #d4d4d4 !important; /* Light gray text color on hover */
      }

      .navbar-brand {
        color: #ffffff !important; /* White text color for brand */
      }

      .navbar-brand:hover {
        color: #d4d4d4 !important; /* Light gray text color on hover */
      }

      .card-img-top {
        height: 200px;
        object-fit: cover;
      }

      .card-title {
        font-size: 1.2rem;
      }

      .card-text {
        font-size: 1rem;
      }

      .btn {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="/">Bakery Shop</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/users">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Orders History</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">User Profile</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
      <h1 class="mb-4">Orders History</h1>
      <% if (cartItems.length > 0) { %>
      <ul class="list-group">
        <% cartItems.forEach(item => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <div class="d-flex align-items-center">
            <img
              src="<%= item.Product.imageUrl %>"
              alt="<%= item.Product.name %>"
              class="img-fluid mr-3"
              style="width: 100px; height: auto"
            />
            <div>
              <h5><%= item.Product.name %></h5>
              <p class="mb-1">
                Price: <%= item.Product.convertPriceToRupiah()%>
              </p>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <a
              onclick="return confirm('Are you sure to delete this Start-Up ?')"
              href="/cart/remove/<%= item.Product.id %>"
              class="btn btn-outline-danger w-100"
              style="
                --bs-btn-padding-y: 0.25rem;
                --bs-btn-padding-x: 0.9rem;
                --bs-btn-font-size: 0.75rem;
              "
            >
              Delete
            </a>
          </div>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <p>Your cart is empty.</p>
      <% } %>
    </div>
    <!-- Tambahkan link Bootstrap JS dan jQuery -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-LtrjvnR4/JqsW7cCp9DZpgIbwg5L2y/MwiHp3j6QU6ZT1DdsT1BY5u/ISJkQmSLp"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
